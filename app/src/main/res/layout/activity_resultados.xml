<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.Resultados.ResultadosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados y Recomendaciones"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/recommendationsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recomendaciones Estructurales (NSR-10)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cargando recomendaciones..."
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageViewFloorPlan"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerInside"
            android:background="@android:color/darker_gray"
            android:contentDescription="Plano en Planta Generado por IA" />

        <TextView
            android:id="@+id/floorPlanLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plano en Planta (Generado por IA - Propuesta Preliminar)"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSaveProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Proyecto"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Calculadora Estructural -->
        <TextView
            android:id="@+id/textViewCalcTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora Estructural"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextLargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Largo del terreno (m)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextAncho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ancho del terreno (m)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextHabitaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de habitaciones"
            android:inputType="number"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextPisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de pisos"
            android:inputType="number"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCalcularEstructura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Estructura"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewResultadoEstructura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado estructural aparecerá aquí"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
