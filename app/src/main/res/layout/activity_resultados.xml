<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ResultadosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados y Recomendaciones"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/recommendationsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recomendaciones Estructurales (NSR-10)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cargando recomendaciones..."
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageViewFloorPlan"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerInside"
            android:background="@android:color/darker_gray"
            android:src="@drawable/placeholder_plan"
            android:contentDescription="Plano en Planta Generado por IA" />

        <TextView
            android:id="@+id/floorPlanLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plano en Planta (Generado por IA - Propuesta Preliminar)"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonSaveProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Proyecto"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>